import time

def start_timer(duration, message):
    print(message)
    while duration:
        mins, secs = divmod(duration, 60)
        timer = '{:02d}:{:02d}'.format(mins, secs)
        print(timer, end="\r")
        time.sleep(1)
        duration -= 1

def pomodoro(work_time=25, short_break=5, long_break=15, cycles=4):
    for cycle in range(cycles):
        start_timer(work_time * 60, f"Work Session {cycle + 1}/{cycles}. Timer: {work_time} minutes.")
        if cycle < cycles - 1:
            start_timer(short_break * 60, f"Short Break. Timer: {short_break} minutes.")
        else:
            start_timer(long_break * 60, f"Long Break. Timer: {long_break} minutes.")

    print("Pomodoro session complete!")

def main():
    try:
        print("Starting Pomodoro Timer...")
        pomodoro()  # You can customize the parameters if needed
    except KeyboardInterrupt:
        print("\nPomodoro timer cancelled.")

if __name__ == "__main__":
    main()
